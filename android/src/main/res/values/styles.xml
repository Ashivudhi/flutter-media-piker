<resources>

    <style name="ef_BaseTheme" parent="Theme.MaterialComponents.Light">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ef_AppTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/ef_primaryColor</item>
        <item name="colorPrimaryDark">@color/ef_primaryDarkColor</item>
        <item name="colorAccent">@color/ef_secondaryColor</item>
    </style>

    <style name="ef_CustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/ef_colorTextPrimary</item>
        <item name="actionMenuTextColor">@color/ef_colorTextPrimary</item>
    </style>

</resources>
